APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Frontend URL for CORS (required for SPA authentication)
FRONTEND_URL=http://localhost:3000

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:8000
SANCTUM_TOKEN_EXPIRATION=480

# =============================================================================
# PRODUCTION SECURITY SETTINGS
# =============================================================================
# Uncomment and configure these settings for production deployment.
# See SECURITY_CHECKLIST.md for complete checklist.
#
# APP_ENV=production
# APP_DEBUG=false
# APP_URL=https://api.agilesourcing.com
#
# # Session Security
# SESSION_ENCRYPT=true
# SESSION_SECURE_COOKIE=true
# SESSION_SAME_SITE=strict
#
# # Database Security (use strong passwords!)
# DB_PASSWORD=<strong-generated-password>
# # DB_SSLMODE=require
#
# # Redis Security
# REDIS_PASSWORD=<strong-generated-password>
# # REDIS_SCHEME=tls
#
# # Logging
# LOG_LEVEL=warning
#
# # CORS & Sanctum
# FRONTEND_URL=https://app.agilesourcing.com
# SANCTUM_STATEFUL_DOMAINS=app.agilesourcing.com
#
# # Instagram (production redirect URI)
# INSTAGRAM_REDIRECT_URI=https://api.agilesourcing.com/api/v1/instagram/callback

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================

# OpenAI Configuration (for GPT-4o Vision design analysis)
OPENAI_API_KEY=
OPENAI_ORGANIZATION=
OPENAI_MODEL=gpt-4o

# Google Gemini Configuration (for design variation generation)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash

# =============================================================================
# INSTAGRAM INTEGRATION
# =============================================================================

# Instagram Graph API (requires Facebook Business App)
INSTAGRAM_CLIENT_ID=
INSTAGRAM_CLIENT_SECRET=
INSTAGRAM_REDIRECT_URI=http://localhost:8000/api/v1/instagram/callback
INSTAGRAM_GRAPH_VERSION=v18.0
