# AgileSourcing Production Environment
# Copy this to /var/www/agilesourcing/backend/.env

APP_NAME=AgileSourcing
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://api.agilesourcing.ca

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# Database - Update with credentials from setup.sh output
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=agilesourcing
DB_USERNAME=agilesourcing
DB_PASSWORD=REPLACE_WITH_PASSWORD_FROM_SETUP

# Session - Production settings
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.agilesourcing.ca
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# CORS & Sanctum
FRONTEND_URL=https://agilesourcing.ca
SANCTUM_STATEFUL_DOMAINS=agilesourcing.ca,www.agilesourcing.ca
SANCTUM_TOKEN_EXPIRATION=480

# Redis
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Cache & Queue
CACHE_STORE=redis
QUEUE_CONNECTION=redis
BROADCAST_CONNECTION=log

# File Storage
FILESYSTEM_DISK=local

# Mail - Configure with your email provider
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@agilesourcing.ca"
MAIL_FROM_NAME="${APP_NAME}"

# Stripe - Get from Stripe Dashboard
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

# OpenAI - Get from OpenAI Dashboard
OPENAI_API_KEY=
OPENAI_ORGANIZATION=
OPENAI_MODEL=gpt-4o

# Google Gemini - Get from Google AI Studio
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash

# Instagram - Get from Meta Developer Portal
INSTAGRAM_CLIENT_ID=
INSTAGRAM_CLIENT_SECRET=
INSTAGRAM_REDIRECT_URI=https://api.agilesourcing.ca/api/v1/instagram/callback
INSTAGRAM_GRAPH_VERSION=v18.0
